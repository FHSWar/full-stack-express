{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug with ts-node",
			"runtimeArgs": ["-r", "ts-node/register"],
			"args": ["${workspaceFolder}/server/app.ts"],
			"cwd": "${workspaceFolder}/server",
			"restart": true,
			"sourceMaps": true,
			"env": {
				"NODE_ENV": "local" // Set the desired value for NODE_ENV
			}
		}
	]
}
