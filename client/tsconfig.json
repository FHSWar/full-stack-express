{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~api/*": ["api/*"],
      "~assets/*": ["assets/*"],
			"~components/*": ["components/*"],
			"~layout/*": ["layout/*"],
			"~public/*": ["public/*"],
			"~styles/*": ["styles/*"],
			"~types/*": ["types/*"],
			"~utils/*": ["utils/*"],
			"~views/*": ["views/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
